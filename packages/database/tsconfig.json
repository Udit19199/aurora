{
	"extends": "@aurora/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"generated"
	]
}
